@using RestApp.Web.Framework.UI;
@{
    //success messages
    var successMessages = new List<string>();
    if (TempData[string.Format("apsalud.notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(TempData[string.Format("apsalud.notifications.{0}", NotifyType.Success)] as IList<string>);
    }
    if (ViewData[string.Format("apsalud.notifications.{0}", NotifyType.Success)] != null)
    {
        successMessages.AddRange(ViewData[string.Format("apsalud.notifications.{0}", NotifyType.Success)] as IList<string>);
    }


    //error messages
    var errorMessages = new List<string>();
    if (TempData[string.Format("apsalud.notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(TempData[string.Format("apsalud.notifications.{0}", NotifyType.Error)] as IList<string>);
    }
    if (ViewData[string.Format("apsalud.notifications.{0}", NotifyType.Error)] != null)
    {
        errorMessages.AddRange(ViewData[string.Format("apsalud.notifications.{0}", NotifyType.Error)] as IList<string>);
    }
}
@foreach (var message in successMessages)
{
    <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">
            &times;</button>
        @message
    </div>
@*    <div class="clear">
    </div>*@
}
@foreach (var message in errorMessages)
{
    <div class="alert alert-error">
        <button type="button" class="close" data-dismiss="alert">
            &times;</button>
        @message
    </div>
}
